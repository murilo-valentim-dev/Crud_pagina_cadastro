{{#unless error}}
<div class="bg-body-tertiary p-5 rounded mt-3">
    <h1>Editar</h1>
    <form action="/update" method="post">
        <div class="row mt-5">
            <div class="col-md-5 mb-3">
                <label for="nome" class="form-label">Nome Completo</label>
                <input type="hidden" value="{{id}}" name="id">
                <input value="{{nome}}" type="text" class="form-control" name="nome" id="nome"
                    placeholder="Digite seu nome" required>
            </div>
            <div class="col-md-5 mb-2">
                <label for="email" class="form-label">Endereço de e-mail</label>
                <input value="{{email}}" type="email" class="form-control" name="email" id="email"
                    placeholder="Digite seu e-mail" required>
            </div>
            <div class="col-md-2">
                <button class="mt-4 p-2 w-100 btn btn-warning">Salvar Alterações</button>
            </div>
        </div>
    </form>
</div>
{{else}}
<div class="card bg-danger p-4 mt-5 texte-white">
    <div class="card-body fw-bold text-center">
        Houve um problema: {{problema}}
    </div>
</div>
{{/unless}}